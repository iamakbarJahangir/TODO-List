<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    android:checkable="true"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="18dp"
    app:cardElevation="8dp"
    app:strokeColor="#E3F2FD"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="20dp">

        <!-- Completion Checkbox with better styling -->
        <CheckBox
            android:id="@+id/cb_is_completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:buttonTint="#4CAF50"
            android:contentDescription="@string/complete_task_description"
            android:scaleX="1.2"
            android:scaleY="1.2" />

        <!-- Task Content with better spacing -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Task Title with emoji support -->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                android:maxLines="2"
                android:text="@string/sample_task_title"
                android:textColor="#1A1A1A"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Task Description with better visibility -->
            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingExtra="1dp"
                android:maxLines="3"
                android:text="@string/sample_task_description"
                android:textColor="#666666"
                android:textSize="14sp"
                android:visibility="visible" />
        </LinearLayout>

        <!-- Action Buttons with modern Material Design -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Edit Button with Material 3 style -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_edit"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/edit_task_description"
                app:icon="@drawable/ic_edit"
                app:iconTint="#1976D2"
                app:backgroundTint="#E3F2FD"
                app:cornerRadius="24dp"
                app:rippleColor="#BBDEFB" />

            <!-- Delete Button with Material 3 style -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_delete"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@string/delete_task_description"
                app:icon="@drawable/ic_delete"
                app:iconTint="#D32F2F"
                app:backgroundTint="#FFEBEE"
                app:cornerRadius="24dp"
                app:rippleColor="#FFCDD2" />
        </LinearLayout>
    </LinearLayout>

    <!-- Optional: Status indicator bar at bottom -->
    <View
        android:id="@+id/status_indicator"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_gravity="bottom"
        android:background="@drawable/task_status_gradient"
        android:visibility="gone" />

</com.google.android.material.card.MaterialCardView>