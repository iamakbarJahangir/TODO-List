<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Completed task - Green gradient -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#4CAF50"
                android:endColor="#66BB6A"
                android:angle="0"
                android:type="linear" />
            <corners android:radius="2dp" />
        </shape>
    </item>

    <!-- In Progress task - Blue gradient -->
    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#2196F3"
                android:endColor="#42A5F5"
                android:angle="0"
                android:type="linear" />
            <corners android:radius="2dp" />
        </shape>
    </item>

    <!-- Overdue task - Red gradient -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#F44336"
                android:endColor="#EF5350"
                android:angle="0"
                android:type="linear" />
            <corners android:radius="2dp" />
        </shape>
    </item>

    <!-- Default/Pending task - Light blue gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#E3F2FD"
                android:endColor="#BBDEFB"
                android:angle="0"
                android:type="linear" />
            <corners android:radius="2dp" />
        </shape>
    </item>

</selector>